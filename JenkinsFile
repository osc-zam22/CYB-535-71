pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('github-token')
    }

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: "${GITHUB_CREDENTIALS}", url: 'https://github.com/osc-zam22/CYB-535-71.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Compiling Java files...'
                sh 'javac *.java'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Java program...'
                sh 'java MainClass' // Replace MainClass with your main class name
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
