pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/osc-zam22/CYB-535-71.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: env.GIT_REPO
            }
        }

        stage('Compile Java Files') {
            steps {
                sh 'javac -cp lib/junit-4.13.2.jar:lib/hamcrest-core-1.3.jar MathUtils.java MathUtilsTest.java'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'java -cp .:lib/junit-4.13.2.jar:lib/hamcrest-core-1.3.jar org.junit.runner.JUnitCore MathUtilsTest'
            }
        }
    }

    post {
        success {
            echo 'Build and tests ran successfully!'
        }
        failure {
            echo 'Build or tests failed. Check the logs for details.'
        }
    }
}
